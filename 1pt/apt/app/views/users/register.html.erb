<div class="mx-4 w-full flex flex-col">
  <aside class="flex flex-col">
    <h1 class="mb-1 lg:mb-2 text-4xl">Register an 1pt user</h1>
    <%= link_to t('usr.login-rather'), login_path, class: 'w-fit ' + button_classes %>
  </aside>

  <%= form_for @user, url: user_create_path do |form| %>
    <%= render "users/form_data", { form: form, submit_name: t("usr.register"), properties: {
      name: :text_field,
      username: :text_field,
      password: :password_field,
      password_confirmation: :password_field,
      email: :email_field,
    } } %>
  <% end %>
</div>
