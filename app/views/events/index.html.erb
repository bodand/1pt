<div class="mx-4 w-full flex flex-col">
  <h1 class="mb-8 lg:mb-4 text-4xl"><%= t 'events.my' %></h1>

  <div class="grid auto-cols-max gap-2">
    <% @events.each { |event| %>
      <div class="text-xl col-1">
        <%= event.name %>
      </div>
      <%= link_to t('events.respond'), event_path(event.id), class: 'col-2 ' + button_classes %>
      <%= link_to t('events.see'), event_responses_path(event.id), class: 'col-3 ' + button_classes %>
    <% } %>
  </div>
</div>
